  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li class="notice"><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url:book_path(@book.id) do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <div class="update_bottom"><%= f.submit 'Update Book' %></div>
  
  <div class= "flexbox">
     <div class="show_bottom"><%= link_to "Show", book_path(@book.id) %></div>
     <div class="back_bottom"><%= link_to "Back", books_path %></div>
  </div>



<% end %>